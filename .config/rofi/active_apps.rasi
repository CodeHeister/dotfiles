configuration {
    modi: "window";
    show-icons: true;
    font: "Iosevka 10";
    icon-theme: "Papirus";
    window-format: "{c}";
    display-window: "ï€‚";
    window-display-format: "{name}";
}

@import "colors.rasi"

* {

}

window {
    transparency: "real";

    background-color: @win-bg;
    width:50%;
    height:80%;
}

mainbox {
    margin : 15px 10px 0 10px;
    border:  0;
    padding: 0;
    background-color: @bg;
    children: [inputbar, listview];
    background-color: transparent;
    spacing: 0.5%;
}

inputbar {
    border-radius-bottom-left: 10px;
    border-radius: 10px;
    background-color: @bg;
    children: [prompt, entry];
    spacing:0;
    margin: 0px;
}

entry {
    background-color: @selected-bg;
    padding: 10px;
    placeholder: "Search...";
    placeholder-color: @fg;
    text-color: @fg;
}

prompt {
  padding: 10px;
  background-color: @selected-bg;
  text-color: @fg;
}

listview {
    spacing : 0.5%;
    margin : 3.75% 0.75% 2% 0.75%;
    padding : 0.1%;
    orientation: horizontal;
    columns: 2;
    lines: 10;
    layout: vertical;
    background-color: transparent;
}

element {
    padding: 2.25% 0.75% 2.25% 0.75%;
    border-radius: 5px;
    width: 50px;
    margin: 0.5%;
}

element-icon {
    size: 36px;
    margin: 1px;
    horizontal-align: 0.5;
    vertical-align: 0.5;
    background-color: transparent;
}

element-text {
    horizontal-align: 0.5;
    vertical-align: 0.5;
    background-color: transparent;
    text-color:       @fg;
}

/* --NORMAL-- */

element normal.normal {
    background-color: rgba(0, 0, 0, 0);
    text-color:       @fg;
}

element selected.normal {
    background-color: @selected-bg;
    text-color:       @selected-fg;
    border-color: #d07ef2;
}

element alternate.normal {
    background-color: rgba(0,0,0,0);
    text-color:       @fg;
}


/* --ACTIVE-- */

element normal.active {
    background-color: @highlight-bg;
}

element selected.active {
   background-color: @selected-bg;
   text-color: @selected-fg;
}

element alternate.active {
    background-color: rgba(0,0,0,0);
    text-color:       @fg;
}


/* --URGENT-- */

element normal.urgent {
    background-color: @urgent;
    text-color:       @fg;
}

element selected.urgent {
   background-color: @urgent;
    text-color:       @selected-bg;
}

element alternate.urgent {
    background-color: @urgent;
    text-color:       @selected-bg;
}

mode-switcher {
    border:       0px 0px 0px ;
    border-color: @separatorcolor;
}

button {
    spacing:    0;
    text-color: @fg;
}

button.selected {
    background-color: @selected-bg;
    text-color:       @selected-fg;
}